{
  "name": "fusion",
  "description": "The PDF app.",
  "author": {
    "name": "Ratul Maharaj",
    "email": "ratulmaharaj@gmail.com"
  },
  "version": "0.1.3",
  "main": "public/main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^12.2.0",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "pdf-merger-js": "^3.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.4",
    "react-icons": "^3.11.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "update-electron-app": "^2.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "rebuild-mac": "./node_modules/.bin/electron-rebuild",
    "rebuild-win": ".\\node_modules\\.bin\\electron-rebuild.cmd",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev-mac": "concurrently -k \"BROWSER=NONE npm start\" \"npm:electron\"",
    "dev": "concurrently -k \"npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "package": "react-scripts build && electron-forge package",
    "make": "react-scripts build && electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RatulMaharaj/Fusion.git"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "concurrently": "^5.3.0",
    "electron": "^10.1.5",
    "electron-rebuild": "^2.3.2",
    "wait-on": "^5.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Fusion",
        "asar": true,
        "icon": "./icons/Fusion",
        "platform": "all"
      },
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "RatulMaharaj",
              "name": "Fusion"
            }
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Fusion",
            "setupIcon": "./icons/Fusion.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
